\begin_layout Standard
\begin_inset Formula 
\[
\ensuremath{\mathbf{h}_{t}=\mathbf{C}_{t}^{-1}\mathbb{E}[\mathbf{r}_{t}]}
\]

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\mathbf{C}_{t+1} & = & \mathbf{C}_{t}+\frac{1}{N}(\mathbf{r}_{t}\mathbf{r}_{t}^{T})-\frac{1}{N}(\mathbf{r}_{t-w}\mathbf{r}_{t-w}^{T})\\
 & = & \mathbf{C}_{t}+\mathbf{L}_{t}\mathbf{N}^{-1}\mathbf{L}_{t}^{T}
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\mathbf{C}_{t+1}^{-1} & = & \big(\mathbf{C}_{t}+\mathbf{L}_{t}\mathbf{N}^{-1}\mathbf{L}_{t}^{T}\big)^{-1}\\
 & = & \mathbf{C}_{t}^{-1}-\mathbf{C}_{t}^{-1}\mathbf{L}_{t}\big(\mathbf{N}+\mathbf{L}_{t}^{T}\mathbf{C}_{t}^{-1}\mathbf{L}_{t}\big)^{-1}\mathbf{L}_{t}^{T}\mathbf{C}_{t}^{-1}
\end{eqnarray*}

\end_inset


\end_layout

